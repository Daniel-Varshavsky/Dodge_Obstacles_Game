<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/start_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/start_IMG_title"
        android:layout_width="370dp"
        android:layout_height="393dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/start_BTN_play"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="-40dp"
        android:src="@drawable/title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/start_BTN_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="START GAME"
        android:textSize="18sp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/start_LBL_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="This game is not affiliated with Nintendo, Game Freak, the Pokemon company, ot the Pokemon franchise in any way. Please don't sue me."
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:textAlignment="center" />




</RelativeLayout>
